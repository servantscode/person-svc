{
  "configuration": {
    "status": "trace",
    "name": "SCLogging",
    "packages": "org.apache.logging.log4j",
    "properties": {
      "property": {
        "name": "logname",
        "value" : "/usr/local/tomcat/logs/servantscode/person-svc"
      }
    },

    "ThresholdFilter": { "level": "trace" },

    "appenders": {
      "appender": [
        {
          "type": "Console",
          "name": "STDOUT",
          "PatternLayout": { "pattern": "%m%n" },
          "ThresholdFilter": { "level": "trace" }
        },
        {
          "type": "RollingFile",
          "name": "file",
          "fileName": "${logname}.log",
          "filePattern": "${logname}.%i.log.gz",
          "PatternLayout": {"pattern": "%d %p %c{1.} [%t] %m%n"},
          "SizeBasedTriggeringPolicy": { "size": "2 GB" },
          "bufferedIO": true,
          "ThresholdFilter": { "level": "info" }
        }
      ]
    },

    "loggers": {
      "logger": [ ],
      "root": {
        "level": "trace",
        "AppenderRef": [
          { "ref": "STDOUT"},
          { "ref": "file" }
        ]
      }
    }
  }
}